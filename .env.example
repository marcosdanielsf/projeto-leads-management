# Supabase Configuration
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Application Configuration
VITE_APP_NAME="Sistema de Gerenciamento de Leads"
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="Sistema completo para gerenciamento de leads e oportunidades"

# Development Configuration
VITE_DEV_MODE=true
VITE_API_BASE_URL=http://localhost:3000

# Analytics (opcional)
VITE_GOOGLE_ANALYTICS_ID=
VITE_HOTJAR_ID=

# Feature Flags (opcional)
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=true
VITE_ENABLE_NOTIFICATIONS=true

# Database Configuration (para scripts de importação)
DATABASE_URL=postgresql://user:password@localhost:5432/database
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Email Configuration (se usando envio de emails)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# Storage Configuration (se usando upload de arquivos)
VITE_STORAGE_BUCKET=leads-attachments
VITE_MAX_FILE_SIZE=5242880

# Security
VITE_ENABLE_RLS=true
VITE_SESSION_TIMEOUT=3600

# Monitoring
VITE_SENTRY_DSN=
VITE_LOG_LEVEL=info